{# templates/team/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Équipe - TaskLinker{% endblock %}

{% block body %}
    <header>
        <div id="current-user"></div>
        <div id="title-page">
            <div class="flex-header">
                <h1>Équipe</h1>
            </div>
        </div>
    </header>

    <div id="content">
        <table id="team-container">
            <thead>
            <tr>
                <th>Prénom, Nom</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <div class="employee-infos">
                            <div class="employee-avatar" title="{{ user.firstName }} {{ user.lastName }}">
                                {{ user.firstName|first }}{{ user.lastName|first }}
                            </div>
                            <div class="employee-coords">
                                {{ user.firstName }} {{ user.lastName }}
                                <small>{{ user.email }}</small>
                            </div>
                        </div>
                    </td>
                    <td>{{ user.status }}</td>
                    <td>
                        <a href="{{ path('team_edit', {id: user.id}) }}" class="button button-edit-team">Éditer</a>
                        <form method="post" action="{{ path('team_delete', {id: user.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer {{ user.firstName }} ?\n\nIl/Elle sera retiré(e) de tous les projets et tâches.');"
                              style="display: inline;">

                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">

                            <button type="submit" class="delete-team" style="border:none; background:none; cursor:pointer;">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun employé trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
